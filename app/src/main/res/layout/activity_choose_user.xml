<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:com.eDonation.custombuttons="http://schemas.android.com/apk/res-auto"
    tools:context=".ChooseUserActivity"
    android:background="@color/white">


<ImageView
    android:id="@+id/logo"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="50dp"
    android:src="@mipmap/ic_logo" />

<TextView
    android:id="@+id/appName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="e-Donation"
    android:layout_below="@+id/logo"
    android:layout_centerHorizontal="true"
    android:textSize="30dp"
    android:textColor="@color/colorTheme"
    android:textStyle="bold"/>

<Button
    android:id="@+id/loginOrganizationBtn"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:text="Login as Organization"
    android:layout_below="@+id/appName"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="48dp"
    android:background="@drawable/round_button"
    android:textColor="@color/white"
    android:padding="14dp"
    android:textSize="14dp"/>


<TextView
    android:id="@+id/registerOrgLink"
    android:clickable="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Not Register? Sign Up as Organization!!"
    android:textSize="12dp"
    android:textColor="@drawable/textview_color_click"
    android:layout_below="@+id/loginOrganizationBtn"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="8dp" />

