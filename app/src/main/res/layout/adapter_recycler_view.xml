<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/orgName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/location"
        android:layout_below="@+id/orgName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textSize="20dp"
        android:layout_marginTop="16dp"
        android:drawableLeft="@mipmap/ic_location"/>

    <TextView
        android:id="@+id/orgEmail"
        android:layout_width="wrap_content"
        android:layout_below="@+id/location"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/ic_email"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:id="@+id/btnLinearLayout"
        android:layout_below="@+id/orgEmail">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="website"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/website_button"
            android:textColor="@color/white"
            android:padding="8dp"
            android:drawableLeft="@mipmap/ic_website"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call"
            android:background="@drawable/call_button"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/ic_call"
            android:layout_marginRight="16dp"
            android:padding="8dp"
            android:layout_marginTop="16dp"/>


    </LinearLayout>

</RelativeLayout>